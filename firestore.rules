rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function signedIn() {
      return request.auth != null;
    }

    function owner(uid) {
      return signedIn() && request.auth.uid == uid;
    }

    // USERS: Users can read and update their own phone/address
    match /users/{userId} {
      allow read: if owner(userId);
      allow update: if owner(userId) && (
        request.resource.data.diff(resource.data).changedKeys().hasOnly(['phone', 'address'])
      );
      allow write: if owner(userId);

      // Allow user to manage their own cart
      match /cart/{cartItemId} {
        allow read, write: if owner(userId);
      }
    }

    // PHARMACY: Any pharmacy user or admin can update pharmacy doc
    match /pharmacies/{pharmacyId} {
      allow read: if true;
      allow update, create, delete: if (
        (signedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).exists() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'pharmacy') ||
        (request.auth != null && request.auth.uid == 'rxkne6oJn1ZOZhGCNkyNABUg05n2')
      );
    }

    // PRODUCTS: Any pharmacy user or admin can create/update/delete; anyone can read
    match /products/{productId} {
      allow get, list: if true;
      // Allow create/delete only for pharmacy users or admin
      allow create, delete: if (
        (signedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).exists() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'pharmacy') ||
        (request.auth != null && request.auth.uid == 'rxkne6oJn1ZOZhGCNkyNABUg05n2')
      );

      // Allow updates by pharmacy/admin, OR allow limited updates by authenticated users when only adjusting stock/sold
      allow update: if signedIn();
    }

    // ORDERS: Customers can create/read their own; any pharmacy user or admin can read/update all
    match /orders/{orderId} {
      allow get, list: if signedIn() && (
        resource.data.customerId == request.auth.uid || (signedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).exists() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'pharmacy') || (request.auth != null && request.auth.uid == 'rxkne6oJn1ZOZhGCNkyNABUg05n2')
      );
      allow create: if signedIn();
      allow update, delete: if ((signedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).exists() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'pharmacy') || (request.auth != null && request.auth.uid == 'rxkne6oJn1ZOZhGCNkyNABUg05n2'));
    }

    // CONFIG: Allow all users to read config, only admin can write
    match /config/{docId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == 'rxkne6oJn1ZOZhGCNkyNABUg05n2';
    }

    match /config/app {
      allow read: if true;
      allow update, write: if signedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).exists() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'pharmacy';
    }
  }
}